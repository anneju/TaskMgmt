<%= form_with model: task, local: true do |form| %>

  <% if task.errors.any? %>
    <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <div class="form-group">
    <label for="title">任務名稱</label>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="description">內容</label>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="start_time">開始時間</label>
    <%= form.datetime_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="end_time">結束時間</label>
    <%= form.datetime_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="priority">優先順序</label>
    <%= form.select :priority, options_for_select(Task.priorities.keys, form.object.priority || :low), required: true, class: 'form-control'%>
  </div>

  <div class="form-group">
    <label for="status">狀態</label>
    <%= form.select :status, options_for_select(Task.statuses.keys, form.object.status || :to_do), required: true, class: 'form-control'%>
  </div>

  <%= form.submit "送出", class: "btn btn-info" %>
<% end %>